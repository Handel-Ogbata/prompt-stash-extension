{
  "manifest_version": 3,
  "name": "Prompt Stash",
  "version": "1.0.0",
  "description": "Save, copy and insert your prompts quickly with Google Drive sync.",
  "author": "Prompt Stash Team",
  "homepage_url": "https://github.com/your-username/prompt-stash",
  "permissions": [
    "storage",
    "scripting", 
    "activeTab",
    "clipboardWrite",
    "identity"
  ],
  "host_permissions": [
    "https://www.googleapis.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Prompt Stash - Manage your prompts",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png", 
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png", 
    "128": "icons/icon128.png"
  },
  "oauth2": {
    "client_id": "1058830253436-7hi8j4t7fm5fnd7sbj7gt251fh0pabds.apps.googleusercontent.com",
    "scopes": ["https://www.googleapis.com/auth/drive.file"]
  },
  "commands": {
    "insert-prompt": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "Insert saved prompt into focused field"
    }
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "minimum_chrome_version": "88"
}
  